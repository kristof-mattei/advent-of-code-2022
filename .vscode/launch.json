    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'advent-of-code-2022'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=advent-of-code-2022",
                    "--package=advent-of-code-2022"
                ],
                "filter": {
                    "name": "advent-of-code-2022",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,advent_of_code_2022=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'advent-of-code-2022'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=advent-of-code-2022",
                    "--package=advent-of-code-2022"
                ],
                "filter": {
                    "name": "advent-of-code-2022",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,advent_of_code_2022=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration_tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_tests",
                    "--package=advent-of-code-2022"
                ],
                "filter": {
                    "name": "integration_tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,advent_of_code_2022=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        }
    ]
}
